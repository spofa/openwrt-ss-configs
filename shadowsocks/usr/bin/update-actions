#!/bin/sh

remoteDir=https://raw.githubusercontent.com/gnu4cn/openwrt-ss-configs/master/shadowsocks
# update scripts and configs
fileList="/etc/dnsmasq.conf /etc/init.d/shadowsocks /etc/crontabs/root /usr/bin/chinalist /usr/bin/shadowsocks-firewall /usr/bin/ss-reload /etc/dnsmasq.d/gfwlist.conf"

dnsmasqReload=0
flag=0

count=0
for file in $fileList
do
    fileName=`echo $file | awk '{sub(/.*\//,x)}'1`
    tmpFile="/tmp/"$fileName".tmp"
    remoteFile=$remoteDir$file

    wget -4 --no-check-certificate -O $tmpFile $remoteFile
    
    if [ -e $tmpFile ] && [ `cat $tmpFile | wc -l` -gt 0 ]; then
        if [ -e $file ]; then
            oldMd5sum=`md5sum $file | awk '{print substr($1, 1)}'`
            newMd5sum=`md5sum $tmpFile | awk '{print substr($1, 1)}'`

            if [ $newMd5sum = $oldMd5sum ]; then
                :
            else
                mv $tmpFile $file
                if [ $count -eq 0 ]; then
                    dnsmasqReload=1
                elif [ $count -eq 2 ]; then
                    /etc/init.d/cron reload
                # /usr/bin/chinalist, /usr/bin/ss-reload
                elif [ $count -eq 3 ] || [ $count -eq 5 ]; then
                    chmod +x $file
                else
                    chmod +x $file
                    flag=1
                fi;
            fi;
        else
            mv $tmpFile $file
            # /etc/dnsmasq.conf
            if [ $count -eq 0 ]; then
                dnsmasqReload=1
            # /etc/crontabs/root
            elif [ $count -eq 2 ]; then
                /etc/init.d/cron reload
            # /usr/bin/chinalist, /usr/bin/ss-reload
            elif [ $count -eq 3 ] || [ $count -eq 5 ]; then
                chmod +x $file
            # /etc/init.d/shadowsocks, /usr/bin/shadowsocks-firewall
            else
                chmod +x $file
                flag=1
            fi;
        fi;
    else
        :
    fi;
    
    count=$((count+1))
done;

# update /etc/servers.conf

tmpEncryptedServers="/tmp/servers.en.txt"
encryptedServers="/etc/servers.en.txt"
servers="/etc/servers.conf"
wget -4 --no-check-certificate -O $tmpEncryptedServers $remoteDir$encryptedServers

if [ -e $tmpEncryptedServers ] && [ `cat $tmpEncryptedServers | wc -l` -gt 0 ]; then
    newMd5sum=`md5sum $tmpEncryptedServers | awk '{print substr($1, 1)}'`
    oldMd5sum=`md5sum $encryptedServers | awk '{print substr($1, 1)}'`

    if [ $newMd5sum = $oldMd5sum ]; then
        :
    else
        mv $tmpEncryptedServers $encryptedServers
        echo '&0875pHl' | gpg --batch --yes --passphrase-fd 0 --output $servers --decrypt $encryptedServers
        flag=1
    fi;
fi;

if [ $flag -eq 1 ]; then
    /etc/init.d/shadowsocks reload
fi;

if [ $dnsmasqReload -eq 1 ]; then
    /etc/init.d/dnsmasq reload
fi;
